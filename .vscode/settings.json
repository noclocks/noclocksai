{
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 15,
  "github.copilot.chat.agent.runTasks": true,
  "chat.mcp.discovery.enabled": false,
  "github.copilot.chat.agent.autoFix": true,
  "chat.tools.autoApprove": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": ".vscode/instructions/copilot-commit-message-instructions.md"
    }
  ],
  "r.lsp.enabled": true,
  "r.lsp.debug": false,
  "r.lsp.diagnostics": false,
  "r.bracketedPaste": true,
  "r.sessionWatcher": true,
  "[r]": {
    "editor.defaultFormatter": "REditorSupport.r",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "files.associations": {
    "*.r": "r",
    "*.R": "r",
    "DESCRIPTION": "debian-control.r",
    "NAMESPACE": "namespace.r",
    ".Rbuildignore": "buildignore.r",
    "*.rmd": "rmarkdown",
    "*.Rmd": "rmarkdown",
    "*.Rprofile": "r",
    ".editorconfig": "editorconfig",
    ".gitignore": "gitignore",
    ".gitattributes": "gitattributes",
    ".repomixignore": "ignore"
  }
}

{
  "output": {
    "filePath": "{{output_dir}}/{{name}}.repomix.{{ext}}",
    "style": "{{style}}",
    "parsableStyle": true,
    "fileSummary": true,
    "directoryStructure": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": false,
    "topFilesLength": 10,
    "showLineNumbers": true,
    "copyToClipboard": false,
    "headerText": "{{header}}",
    "instructionsFilePath": "{{instructions_file}}",
    "includeEmptyDirectories": false,
    "git": {
      "sortByChanges": true,
      "sortByChangesMaxCommits": 100
    }
  },
  "include": [
    "R/**/*",
    "src/**/*",
    "inst/**/*",
    "man/**/*.Rd",
    "data-raw/**/*.R",
    "data/**/*.rda",
    "vignettes/**/*.Rmd",
    "DESCRIPTION",
    "NAMESPACE",
    "README.md",
    "NEWS.md"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      ".Rproj.user/**",
      "*.Rproj",
      ".Rhistory",
      ".RData",
      ".Ruserdata",
      "*.rds",
      "*.Rproj",
      "*.o",
      "*.so",
      "*.dll",
      "*.Rcheck/**",
      "docs/**",
      "*.tar.gz",
      "*.qs",
      "*.log",
      "*.tmp",
      "temp/**",
      "dev/**",
      "config.yml"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
